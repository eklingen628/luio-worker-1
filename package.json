{
	"name": "lutestworkerlocal",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "tsc",
		"start": "dotenvx run -f .env.local -- pm2 start ecosystem.config.js --env local",
		"dev": "dotenvx run -f .env.local -- ts-node src/app.ts",
		"cli": "dotenvx run -f .env.local -- node dist/utils/cli.js 2>&1 | tee -a logs/cli.log",
		"refresh": "npm install && rm -rf dist && npm run build"
	},
	"devDependencies": {
		"@types/bcrypt": "^6.0.0",
		"@types/cookie-parser": "^1.4.9",
		"@types/express": "^5.0.3",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/nodemailer": "^6.4.17",
		"@types/pg": "^8.15.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.48.3",
		"bcrypt": "^6.0.0",
		"cookie-parser": "^1.4.7",
		"csv": "^6.4.1",
		"express": "^5.1.0",
		"jsonwebtoken": "^9.0.2",
		"node-cron": "^4.2.1",
		"nodemailer": "^7.0.5",
		"pg": "^8.16.3",
		"winston": "^3.17.0"
	}
}
